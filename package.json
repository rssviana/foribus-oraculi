{
  "name": "foribus-oraculi",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "5.11.4",
    "@testing-library/react": "10.4.9",
    "@testing-library/user-event": "12.1.3",
    "commitizen": "4.2.1",
    "react-dom": "16.13.1",
    "react-router-dom": "5.2.0",
    "react-scripts": "3.4.3",
    "react": "16.13.1",
    "styled-components": "5.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-app-rewired test --watchAll=false",
    "eject": "react-scripts eject",
    "format": "prettier --write src/**/*.ts{,x}",
    "lint": "eslint --ext js,ts,jsx,tsx src",
    "lint:fix": "eslint --fix --ext js,ts,jsx,tsx src",
    "coverage": "react-app-rewired test src/ --coverage --watchAll=false",
    "coverage-ts": "cd src; typescript-coverage-report -t 0 -o ../coverage-ts"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "9.1.2",
    "@commitlint/config-conventional": "10.0.0",
    "@types/jest": "24.0.0",
    "@types/node": "12.0.0",
    "@types/react-dom": "16.9.0",
    "@types/react-router-dom": "5.1.5",
    "@types/react": "16.9.0",
    "@types/styled-components": "5.1.3",
    "@typescript-eslint/eslint-plugin": "3.10.1",
    "@typescript-eslint/parser": "3.10.1",
    "babel-eslint": "10.1.0",
    "customize-cra-react-refresh": "1.1.0",
    "customize-cra": "1.0.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint-config-airbnb-typescript": "9.0.0",
    "eslint-config-airbnb": "18.2.0",
    "eslint-config-prettier": "6.12.0",
    "eslint-import-resolver-typescript": "2.3.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jest": "24.0.2",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react-hooks": "2.5.0",
    "eslint-plugin-react": "7.19.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.13",
    "prettier": "2.1.2",
    "react-app-rewired": "2.1.6",
    "typescript-coverage-report": "0.1.3",
    "typescript": "4.0.2"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --ext js,ts,jsx,tsx src"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run coverage; yarn run coverage-ts",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && ./node_modules/.bin/git-cz --hook || true"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
